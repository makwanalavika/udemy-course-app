<h4 class="ui center aligned medium icon header">
  <i class="circular blue meetup icon"></i>
  Say Something
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render 'messages/message' %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for @message, class: "ui reply form",  remote: true do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder:"Enter a message...", id: 'send_message' %>
              <i class="bordered inverted blue edit icon"></i>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  jQuery('#send_message').keypress(function(e) {
    if (e.keyCode == 13 && !e.shiftKey) {
        e.preventDefault();
        jQuery.ajax({
            type:'POST',
            url: 'messages',
            data: {message: this.value},
            success: {},

        });
    }
});
</script>
