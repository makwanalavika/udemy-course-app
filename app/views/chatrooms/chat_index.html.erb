<h2 class="ui center aligned medium icon header">
  <i class="circular blue meetup icon"><h3>Say Something</h3></i>
</h2>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content ">
        <div class="ui medium feed ">
          <h4 class="ui header">Yours chats</h4>
          <div class="event">
            <%= render 'messages/message' %>
          </div>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon button">
              <i class="bordered inverted orange edit icon"></i>
                <input type="text" placeholder="Enter message...">
              <div class="ui left icon input">
                <i class="users icon"></i>
            </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
